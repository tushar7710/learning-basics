extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style
        include ../static/stylecontact.css

block content
    div(class="contact")
        h1 Contact Us   
        form(action="/contact", method="post",id="form" )
        h3
         | Name
        input(type="text", class="myinput" , name="name" , placeholder="Enter Your Name")
        h3
         | Mobile Number
        input(type="number", class="myinput" , name="number" , placeholder="Enter Your Mobile Number")
        h3
         | Email
        input(type="text", class="myinput" , name="email" , placeholder="Enter Your Email")
        h3
         | Address
        input(type="text", class="myinput" , name="email" , placeholder="Enter Your Address")
        
        h3
         | About You
        textarea(name="About", cols="30", rows="10",class="myinput" placeholder="Tell Us About You, ur preference and ur preferable time")

        button(class="btn")
            | Submit

